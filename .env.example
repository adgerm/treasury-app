# Database
DATABASE_URL=postgresql://user:password@localhost:5432/treasury_dev

# Google Sheets (service account JSON path; use write-secrets script to populate from GOOGLE_SA_JSON)
GOOGLE_SERVICE_ACCOUNT_KEYFILE=/run/secrets/google_sa.json

# AWS S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=treasury-receipts

# Auth
JWT_SECRET=your-jwt-secret-min-32-chars
REFRESH_TOKEN_SECRET=your-refresh-secret-min-32-chars
ACCESS_TOKEN_EXPIRY=15m

# SMTP (notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=Treasury App <noreply@example.com>

# Observability
SENTRY_DSN=

# App
MESSAGE_RETENTION_DAYS=90
CORS_ORIGIN=http://localhost:3000
PORT=3000
